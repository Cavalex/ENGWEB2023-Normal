extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Plantas - Teste EngWeb 22/23
      h2 #[a(href="/") Página Principal]
    .w3-container
      table.w3-table-all 
        tr 
          th _id
          th Freguesia
          th Espécie 
          th Estado
          th Número de intervenções
        each p in plantas
          tr
            td
              a(href='/'+p._id)= p._id
            td= p.Freguesia
            td
              a(href='/especies/'+p.Espécie)= p.Espécie
            td= p.Estado
            td= p["Número de intervenções"]

    footer.w3-container.w3-teal
      h5 Teste EngWeb 20/23 in #{d}
