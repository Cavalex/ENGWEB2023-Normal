extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      h2 ID da Planta: #{planta._id}
      h2 #[a(href="/") Página Principal]
    .w3-container
      table.w3-table-all 
        tr 
          th _id
          th Número de Registo
          th Código de rua
          th Rua
          th Local
          th Freguesia
          th Espécie
          th Nome Científico
          th Origem
          th Data de Plantação
          th Estado
          th Caldeira
          th Tutor
          th Implantação
          th Gestor
          th Data de actualização
          th Número de intervenções
        tr 
          td
            a(href='/'+planta._id)= planta._id
          td= planta["Número de Registo"]
          td= planta["Código de rua"]
          td= planta.Rua
          td= planta.Local
          td= planta.Freguesia
          td
            a(href='/especies/'+planta.Espécie)= planta.Espécie
          td= planta["Nome Científico"]
          td= planta.Origem
          td= planta["Data de Plantação"]
          td= planta.Estado
          td= planta.Caldeira
          td= planta.Tutor
          td= planta.Implantação
          td= planta.Gestor
          td= planta["Data de actualização"]
          td= planta["Número de intervenções"]

    footer.w3-container.w3-teal
      h5 Teste EngWeb 20/23 in #{d} - #[a(href="/") Return]